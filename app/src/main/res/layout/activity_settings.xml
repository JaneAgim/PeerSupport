<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="2dp"
                    android:text="Username:" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="2dp"
                    android:text="Email: " />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="2dp"
                    android:text="Current Course: " />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="2dp"
                    android:text="Name:" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="2dp"
                    android:text="Matched Users:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="258dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameSettings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textMultiLine"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/emailSettings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textMultiLine"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/currentCourseSettings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textMultiLine"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/nameSettings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textMultiLine"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/matchedUsersSettings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:text="No matched users yet" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#BD5353"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:background="#EFD1D1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mainSettings"
                    android:layout_width="25dp"
                    android:layout_height="210dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#BD5353"
                    android:text="back to main"
                    app:cornerRadius="15dp" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BD5353"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/changeNameSettings"
                    android:layout_width="25dp"
                    android:layout_height="210dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#BD5353"
                    android:text="change name"
                    app:cornerRadius="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BD5353"
                android:gravity="center_vertical"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:background="#EFD1D1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/changeEmailSettings"
                    android:layout_width="25dp"
                    android:layout_height="210dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#BD5353"
                    android:text="change email"
                    app:cornerRadius="15dp" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BD5353"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/changePasswordSettings"
                    android:layout_width="25dp"
                    android:layout_height="210dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#BD5353"
                    android:text="reset password"
                    app:cornerRadius="15dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>